{
  "include": ["./src"],
  "compilerOptions": {
    "target": "es2022",
    "outDir": "dist",
    "experimentalDecorators": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
